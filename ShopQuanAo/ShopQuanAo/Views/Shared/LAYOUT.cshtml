                <form action="/Home/Search" class="d-flex search w-100" style="margin-bottom:-2px;" method="post">
                    <input class="form-control me-2" type="search" name="txt_Search" placeholder="Nhập sản phẩm bạn muốn tìm kiếm" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit" style="padding: 10px 20px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg>
                    </button>
                    </form>
                <a href="/GioHang/GioHang" style="margin:0px 30px; position:relative;">

                    @if (Session["TongGH"] != null && Convert.ToInt32(Session["TongGH"]) > 0)
                    {
                        <div style="border:1px solid gold; padding:0px 2px; width:25px; color:darkblue; font-weight:bold; font-size:12px; position:absolute; left:25px;  bottom:23px; background-color:gold; border-radius:10px;">
                            @if (Convert.ToInt32(Session["TongGH"]) > 99)
                            {
                                <center><span>99+</span></center>
                            }
                            else
                            {
                                <center><span>@Session["TongGH"]</span></center>
                            }
                        </div>
                    }

                    <svg style="color:white;" xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                        <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z" />
