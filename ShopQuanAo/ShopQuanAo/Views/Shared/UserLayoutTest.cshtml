@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QLShop</title>
    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="text-center">
        <!--NAVIGATION-->
        <!-- <div class="container-fluid"> -->

        <form action="/Home/Search" method="post">
            <div class="row" style="background-color:lightblue; height:100px;">
                <div class="col-4 mt-2">

                </div>
                <div class="col-4 mt-4">
                    <input class="form-control mx-auto" type="search" placeholder="Search" aria-label="Search" name="txt_Search">
                </div>
                <div class="col-1 mt-3">
                    <button class="btn btn-link" type="submit"><img src="~/Image/Search.jpg" width="60%" class=" rounded" /></button>
                </div>
                <div class="col-3">

                </div>
            </div>
        </form>

        <div class="row" style="background-color:black; height:60px;">
            <div class="col-12 mt-3 mx-auto">
                <ul>
                    <li style="float:left; position:relative; display:block; width:150px; color:white; ">
                        @*<a href="#" style="color:white;">TRANG CHỦ</a>*@
                        <a href="/QuanAo/QuanAoPartial" style="color:white;">TRANG CHỦ</a>
                    </li>
                    <li style="float:left; position:relative;  display:block; width:150px; color:white; ">
                        @*<a href="#" style="color:white;">ĐĂNG KÝ</a>*@
                        <a href="/NguoiDung/DangKy" style="color:white;">ĐĂNG KÝ</a>
                    </li>
                    <li style="float:left; position:relative;  display:block; width:150px; color:white; ">
                        @*<a href="#" style="color:white;">ĐĂNG NHẬP</a>*@
                        <a href="/NguoiDung/DangNhap" style="color:white;">ĐĂNG NHẬP</a>
                    </li>
                    <li style="float:left; position:relative; display:block;width:150px;color:white;">
                        <a href="/GioHang/GioHang" style="color:white;">GIỎ HÀNG</a>
                        @if (Session["TongGH"] != null && Convert.ToInt32(Session["TongGH"]) > 0)
                        {
                            <span> (@Session["TongGH"])</span>
                        }
                    </li>
                </ul>
            </div>
        </div>
        <!-- </div> -->
        <!--CONTAIN-->
        <div class="row">
            <div class="col col-md-2  card">
                <ul class="list-group list-group-flush text-left">
                    <li class="list-group-item" style="background-color:yellow;"><a href="#" style="text-transform:uppercase; text-decoration:none; color:white; font-weight:bold;">ÁO</a></li>
                    @Html.Action("AoPartial", "Home")
                    @*<li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Áo Len</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Áo Thun</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Áo Kiểu</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Áo Sơ Mi</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Áo CropTop</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Áo Dây</a></li>*@


                </ul>
                

                <ul class="list-group list-group-flush text-left">
                    <li class="list-group-item" style="background-color:red;"><a href="#" style="text-transform:uppercase; text-decoration:none; color:white; font-weight:bold;">QUẦN</a></li>
                    @Html.Action("QuanPartial", "Home")
                    @*<li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Quần Kaki</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Quần Ống Rộng</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Quần Thun</a></li>
                    <li class="list-group-item"><a href="#" style="text-transform:uppercase; text-decoration:none;">Quần Short</a></li>*@

                </ul>


            </div>
            <div class="col col-md-8" style="background-color:lavender;">
                <div class="row">
                    <div class="col">

                        <div id="carouselExampleControls" class="carousel w-100 mx-auto mt-3" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Image/Anh1.jpg" height="190px" class="d-block w-100" alt="Ảnh 1" />
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Image/Anh2.jpg" height="190px" class="d-block w-100" alt="Ảnh 2" />
                                </div>

                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div>
                    @RenderBody()




                </div>
            </div>
        </div>
        <!--Footer-->
        <div class="row" style="background-color:red; text-align:center;">
            <div class="col text-light mt-3 mb-3" style="text-align:center;">ĐỊA CHỈ: 53/21 PHẠM NGỌC THẢO, PHƯỜNG TÂY THẠNH, QUẬN TÂN PHÚ, THÀNH PHỐ HỒ CHÍ MINH <br /> SỐ ĐIỆN THOẠI: 0363776834 MAIL: PHAMVUHUY17062002@GMAIL.COM </div>
        </div>
    </div>

</body>
</html>


