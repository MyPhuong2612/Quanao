@using ShopQuanAo.Models
@model List<GioHang>
@{
    ViewBag.Title = "INDEX2";
    Layout = "~/Views/Shared/LAYOUT.cshtml";
}
<div class="container" style="margin-top:50px;">
    <h2 style="text-align:center">ĐƠN ĐẶT HÀNG</h2>
    <table align="center" border="1">
        <tr style="text-align:center; font-weight:bold;">
            <th>MÃ SẢN PHẨM</th>
            <th>TÊN SẢN PHẨM</th>
            <th>ẢNH</th>
            <th>SỐ LƯỢNG</th>
            <th>ĐƠN GIÁ</th>
            <th>THÀNH TIỀN</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td width="12%">@item.MaSP</td>
                <td width="18%">@item.TenSP</td>
                <td width="30%"> <img src="~/Image/@item.Anh" width="10%" /> </td>
                @using (Html.BeginForm("CapNhapGioHang", "GioHang", new { @masp = item.MaSP }))
                {
                    <td width="12%">@item.Sl</td>
                    <td width="12%"> @String.Format("{0:0,0}", item.Gia)</td>
                    <td width="16%"> @String.Format("{0:0,0}", item.ThanhTien)</td>

                }

            </tr>
        }
        <tr style="background-color:lightyellow">
            <td colspan="3" style="color:blue; font-weight:bold; text-align:right">Tổng cộng:</td>
            <td style="color:red; font-weight:bold">SL: @ViewBag.tsl</td>
            <td> </td>
            <td colspan="4" style="color:red; font-weight:bold; text-align:left;">TT: @*@String.Format("{0:0,0}",*@ @ViewBag.tt VNĐ</td>

        </tr>

    </table>
    <h2 style="text-align:center">THÔNG TIN ĐẶT HÀNG</h2>
    @{
        KhachHang kh = (KhachHang)Session["TaiKhoan"];

    }
    <table align="center">
        @using (Html.BeginForm())
        {
            <tr>
                <td>Họ Tên Khách Hàng:</td>
                <td style="font-weight:bold">@kh.HoTen</td>
            </tr>
            <tr>
                <td>Địa Chỉ:</td>
                <td style="font-weight:bold">@kh.DiaChi</td>
            </tr>
            <tr>
                <td>Điện Thoại:</td>
                <td style="font-weight:bold">@kh.DienThoai</td>
            </tr>
            <tr>
                <td>Ngày Đặt</td>
                <td style="font-weight:bold;">@DateTime.Now.ToShortDateString()</td>

            </tr>

            <tr>
                <td></td>
                <td> <input type="submit" value="ĐỒNG Ý ĐẶT HÀNG" /></td>
            </tr>
        }
    </table>
</div>